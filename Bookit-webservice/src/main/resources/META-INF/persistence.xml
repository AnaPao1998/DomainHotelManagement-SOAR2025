<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <!-- Use a local JDBC connection, not a JTA DataSource -->
    <persistence-unit name="bookitPU" transaction-type="RESOURCE_LOCAL">

        <!-- For now just the User entity; you can add more later -->
        <class>ch.unil.bookit.domain.User</class>

        <properties>
            <!-- JDBC connection FROM THE PAYARA CONTAINER to the db container -->
            <property name="jakarta.persistence.jdbc.driver"
                      value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://db:3306/bookit_db?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user"
                      value="bookit"/>
            <property name="jakarta.persistence.jdbc.password"
                      value="pw"/>

            <!-- Schema handling + logging -->
            <property name="jakarta.persistence.schema-generation.database.action"
                      value="create"/>
            <property name="eclipselink.logging.level"
                      value="FINEST"/>
        </properties>
    </persistence-unit>
</persistence>
