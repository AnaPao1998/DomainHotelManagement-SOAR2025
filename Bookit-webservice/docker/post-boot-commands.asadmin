#Cleaning resources at boot to avoid conflicts (might be useful)
delete-jdbc-resource jdbc/StudyBuddy
delete-jdbc-connection-pool StudyBuddyPool
#JDBC pool
create-jdbc-connection-pool --restype javax.sql.DataSource --datasourceclassname com.mysql.cj.jdbc.MysqlDataSource --isconnectvalidatereq=true --validationmethod=auto-commit --property "user=${ENV=DB_USER}:password=${ENV=DB_PASSWORD}:DatabaseName=${ENV=DB_NAME}:ServerName=${ENV=DB_HOST}:PortNumber=${ENV=DB_PORT}:useSSL=false:allowPublicKeyRetrieval=true" StudyBuddyPool
#JNDI resource
create-jdbc-resource --connectionpoolid StudyBuddyPool jdbc/StudyBuddy
